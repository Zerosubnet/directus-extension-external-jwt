{
	"compilerOptions": {
		"esModuleInterop": true,
		"lib": ["ES2022"],
		"module": "ES2022",
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"noUnusedLocals": true,
		"target": "es2022",
		"types": ["node"],
		"outDir": "dist",
		"typeRoots": ["node_modules/@types"],
		"allowSyntheticDefaultImports": true,
	  },
	  "include": ["src/**/*.ts"],
	  "exclude": []
}
